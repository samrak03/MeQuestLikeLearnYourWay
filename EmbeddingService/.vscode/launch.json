// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI (Uvicorn)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn", // Uvicorn 모듈을 실행
            "args": [
                "main:app",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload" // 개발 중에는 reload 활성화
                // "--log-level", "debug" // Uvicorn 로그 레벨 조절 가능
            ],
            "jinja": true, // Jinja2 템플릿 디버깅 활성화 (FastAPI에서는 직접 필요 없을 수 있지만, 안전하게 포함)
            "justMyCode": true, // 내 코드만 디버깅 (라이브러리 코드는 건너뛰기)
            "env": {
                // 여기에 PostgreSQL 환경 변수들을 설정합니다.
                // VS Code 디버거가 이 환경 변수를 사용하도록 합니다.
                "PG_HOST": "localhost",
                "PG_PORT": "5432",
                "PG_USER": "mequest_user",
                "PG_PASS": "mequest_user",
                "PG_DB": "mequest_rag_db"
            },
            "cwd": "${workspaceFolder}" // 현재 작업 폴더에서 실행
        }
    ]
}